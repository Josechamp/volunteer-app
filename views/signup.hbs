


<div class="container">
    <div class="row vertical-offset-100">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Please sign in</h3>
			 	</div>
			  	<div class="panel-body">
			    	<form  action="/signup" accept-charset="UTF-8"  method="POST" role="form">
                    <fieldset>
					
			    	  	<div class="form-group">
			    		    <input id="email" class="form-control" placeholder="E-mail" name="email" type="text">
			    		</div>
						
			    		<div class="form-group">
			    			<input id="password" class="form-control" placeholder="Password" name="password" type="password" value="">
			    		</div>
						
						<div class="form-group">
						<input id="username" type="text" name="username" placeholder="Your Username">
						</div>
			    		<div class="checkbox">
			    	    	<label>
			    	    	
  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
			    	    	</label>
			    	    </div>
			    		<input class="btn btn-lg btn-success btn-block" type="submit" value="signups">
			    	</fieldset>
			      	</form>
			    </div>
			</div>
		</div>
	</div>
</div>